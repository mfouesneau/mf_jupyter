%% To help filling the document, the draft mode displays guidelines and checks the section limits
\def\DraftCommentColor{blue!80}
\providecommand{\draftcomment}[1]{%
    \ifMyDraft
        {\color{\DraftCommentColor}
        #1
        }
    \fi
}

%% Display individual marks for input files
\ifMyDraft
    \providecommand{\inputfile}[1]{%
    \draftcomment{%
      {\scriptsize\ \hrule\vspace{-1.5em}\texttt{begin input file:} \texttt{\detokenize{#1}}}
    }

    \input{#1}

    \draftcomment{{\scriptsize \texttt{end input file:} \texttt{\detokenize{#1}\hrule}}}
    }
\else
    \providecommand{\inputfile}[1]{\input{#1}}
\fi

